<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:typeface="sans"
            android:textStyle="bold"
            android:text="@string/notification_setting"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:typeface="sans"
            android:text="@string/notification_accept"
            android:lines="1"
            android:layout_weight="1"
            android:ellipsize="marquee"/>

        <ImageButton
            android:id="@+id/accept_notification"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:background="@color/colorTransparent"
            android:src="@drawable/on_off_selector"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:typeface="sans"
            android:text="@string/suggest_geofence_notification"
            android:lines="1"
            android:layout_weight="1"
            android:ellipsize="marquee"/>

        <ImageButton
            android:id="@+id/accept_geofence_notification"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:background="@color/colorTransparent"
            android:src="@drawable/on_off_selector"/>

    </LinearLayout>
</LinearLayout>
